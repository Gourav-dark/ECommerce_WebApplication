@model List<Company>
@{
    ViewData["Title"] = "Company Page";
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <h2 class="text-white py-2 text-center">Company List</h2>    
        </div>
    </div>
    <div class="card-body p-4 pt-2">
        <div class="row">
            <div class="text-end pb-2">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Create New Company
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/company.js"></script>
}